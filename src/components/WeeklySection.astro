---
import NewsArticle from './NewsArticle.astro';

interface Props {
	weekNumber: number;
	articles: {
		title: string;
		date: string;
		summary: string;
	}[];
}

const { weekNumber, articles } = Astro.props;
---

<section class="weekly-section">
	<h2 class="week-title">Week {weekNumber}</h2>
	<div class="articles-grid">
		{articles.map((article, index) => (
			<NewsArticle 
				{...article}
				isMainStory={index === 0}
			/>
		))}
	</div>
</section>

<style>
	.weekly-section {
		margin: 2rem 0;
		padding: 0 1rem;
	}
	.week-title {
		font-family: var(--font-serif);
		font-size: 1.75rem;
		border-bottom: 2px solid #000;
		padding-bottom: 0.5rem;
		margin-bottom: 1rem;
	}
	.articles-grid {
		display: grid;
		gap: 2rem;
	}
</style>